<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:security="http://www.springframework.org/schema/security"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">


	<!-- Localisation du fichier .properties : dataSource.properties -->
	<context:property-placeholder location="classpath*:dataSource.properties" />

	<!-- Declaration du bean dataSourceBean -->
	<bean id="dataSourceBean1"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${db.driverClass}" />
		<property name="url" value="${db.url}" />
		<property name="username" value="${db.username}" />
		<property name="password" value="${db.password}"></property>
	</bean>

	<!-- Configuration de l'autorisation -->
	<security:http>
		<security:intercept-url pattern="/Ecommerce/gestio/**"
			access="ROLE_ADMIN" />

		<security:form-login login-page="/login"
			default-target-url="/Ecommerce/gestio/index" authentication-failure-url="/login"/>

		<security:logout logout-success-url="/logout" />

	</security:http>

	<!-- Configuration de l'authentification -->
	<security:authentication-manager>
		<security:authentication-provider>

			<security:jdbc-user-service
				data-source-ref="dataSourceBean1"
				users-by-username-query="select login,password,actived from gestionnaires where login=?"
				authorities-by-username-query="select g.login, r.rolename from gestionnaires g, roles r where g.id_gestionnaire=r.gestio_id and g.login=?" />
		</security:authentication-provider>
	</security:authentication-manager>
</beans>
